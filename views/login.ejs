<form action="/login" method="post">
  <h1 class="h3 mb-3 fw-normal">Please login</h1>

  <label for="userMail" class="visually-hidden">Email address</label>
  <input
    type="email"
    id="userMail"
    class="form-control"
    name="userMail"
    placeholder="Email address"
    required
  />

  <label for="userPassword" class="visually-hidden">Password</label>
  <input
    type="password"
    id="userPassword"
    class="form-control"
    name="userPassword"
    placeholder="Password"
    required
  />

  <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
</form>

<p><a href="/register">No account? Get one!</a></p>
